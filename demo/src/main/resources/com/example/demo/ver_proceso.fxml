<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.VerProcesoController">
    <children>
        <!-- Título del proceso -->
        <Text fx:id="labelTitulo" layoutX="300.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PROCESO 1" fill="#2c3e50">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Text>

        <!-- Información del proceso -->
        <Text layoutX="200.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tiempo de llegada:" fill="#34495e">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Text>
        <Text fx:id="labelLlegada" layoutX="450.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="..." fill="#2c3e50">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <Text layoutX="200.0" layoutY="240.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tiempo de ejecución:" fill="#34495e">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Text>
        <Text fx:id="labelEjecucion" layoutX="450.0" layoutY="240.0" strokeType="OUTSIDE" strokeWidth="0.0" text="..." fill="#2c3e50">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <Text layoutX="200.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tiempo de espera:" fill="#34495e">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Text>
        <Text fx:id="labelEspera" layoutX="450.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" text="..." fill="#2c3e50">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <Text layoutX="200.0" layoutY="360.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tiempo de retorno:" fill="#34495e">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Text>
        <Text fx:id="labelRetorno" layoutX="450.0" layoutY="360.0" strokeType="OUTSIDE" strokeWidth="0.0" text="..." fill="#2c3e50">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <Text layoutX="200.0" layoutY="420.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tamaño:" fill="#34495e">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Text>
        <Text fx:id="labelTamaño" layoutX="450.0" layoutY="420.0" strokeType="OUTSIDE" strokeWidth="0.0" text="..." fill="#2c3e50">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <!-- Botón Salir -->
        <Button fx:id="btnSalir" layoutX="640.0" layoutY="510.0" mnemonicParsing="false" onAction="#cerrarVentana" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5;" text="Salir" />
    </children>
</AnchorPane>